{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "echo 'No build step needed for JavaScript functions'",
    "build:watch": "echo 'No build step needed for JavaScript functions'",
    "serve": "firebase emulators:start --only functions",
